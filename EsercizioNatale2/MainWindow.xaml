<Window x:Class="EsercizioNatale2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsercizioNatale2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="744">
    <Grid>
        <TextBox Name="TxtNum1" HorizontalAlignment="Left" Height="45" Margin="70,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="165"/>
        <TextBox Name="TxtNum2" HorizontalAlignment="Left" Height="45" Margin="495,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
        <ComboBox x:Name="CmbOperazioni" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="270,80,0,0" Height="45">
            <ComboBoxItem>Somma</ComboBoxItem>
            <ComboBoxItem>Sottrazione</ComboBoxItem>
            <ComboBoxItem>Moltiplicazione</ComboBoxItem>
            <ComboBoxItem>Divisione</ComboBoxItem>
        </ComboBox>
        <Button Content="Calcola" HorizontalAlignment="Left" Height="45" Margin="270,180,0,0" VerticalAlignment="Top" Width="180" Click="Calcola_Click"/>
        <TextBox Name="TxtRisultato" HorizontalAlignment="Left" IsEnabled="False" Height="45" Margin="270,295,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>

    </Grid>
</Window>
